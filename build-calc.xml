<!-- To run this build script, type: 

     ant -f build-calc.xml

     on a shell. 
-->
<project name="calc" basedir="." default="clean">
	<property name="src" location="src" />
	<property name="bin" location="bin" />
	
	<path id="classpath">
		<pathelement location="bin" />
	</path>
	
	<target name="init">
		<mkdir dir="${bin}"/>
	</target>
	
	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${bin}" includeAntRuntime="no">
			<classpath refid="classpath"/>
			<include name="edu/umb/cs680/hw00/Calculator.java"/>
			<!-- include name="edu/umb/cs680/junit5intro/*.java"/-->
		</javac>
	</target>

	<target name="run" depends="compile">
		<java classname="edu.umb.cs680.hw00.Calculator"
				classpathref="classpath"  
				fork="true"/>
	</target>
	
	<target name="clean" depends="run">
		<delete includeemptydirs="true">
			<fileset dir="${bin}/edu/umb/cs680/hw00" includes="**/*"/>
		</delete>
	</target>
</project>
